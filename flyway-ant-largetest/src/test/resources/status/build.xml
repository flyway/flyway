<project name="StatusLargeTest" basedir="." xmlns:flyway="antlib:com.googlecode.flyway.ant">
<taskdef uri="antlib:com.googlecode.flyway.ant"
            resource="com/googlecode/flyway/ant/antlib.xml"
            classpath="path/to/ant-contrib.jar"/>

   <target name="iterate">
      <antcontrib:for param="file">
         <fileset dir="."/>
         <sequential>
            <echo message="- @{file}"/>
         </sequential>
      </antcontrib:for>
   </target>
</project>